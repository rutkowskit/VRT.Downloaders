<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"      
             xmlns:vm="clr-namespace:VRT.Downloaders.ViewModels;assembly=VRT.Downloaders.Core"
             xmlns:mediaService ="clr-namespace:VRT.Downloaders.Services.Medias;assembly=VRT.Downloaders.Services.Medias"  
             x:DataType="vm:MainWindowViewModel"
             x:Class="VRT.Downloaders.Maui.Pages.MainPage"
             xmlns:xct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             >
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" x:Name="SearchBar"></RowDefinition>
                <RowDefinition Height="Auto" x:Name="MediaListLabel"></RowDefinition>
                <RowDefinition Height="2*" x:Name="MediaList"></RowDefinition>
                <RowDefinition Height="Auto" x:Name="QueueListLabel"></RowDefinition>
                <RowDefinition Height="*" x:Name="QueueList"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Margin="5,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <SearchBar Placeholder="Media URL"          
                           IsEnabled="True"
                           Text="{Binding Uri}"
                           SearchCommand="{Binding GetMediasCommand}" />                                
            </Grid>
            <Label Grid.Row="1" TextColor="{StaticResource Primary}">Medias available to download</Label>
            <RefreshView Grid.Row="2" Margin="0,16" Padding="5"
                         Command="{Binding GetMediasCommand}"
                         IsRefreshing="{Binding IsRefreshing}">
                <CollectionView x:Name="MediasListView"                        
                                    ItemsSource="{Binding Medias}"
                                    SelectionMode="None"
                                    EmptyView="None">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="5" Padding="0">
                                <Grid x:DataType="mediaService:MediaInfo">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="50"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <StackLayout Padding="10" Spacing="1">
                                        <Label Text="{Binding Title}" 
                                                   HorizontalOptions="FillAndExpand"
                                                   FontSize="16" FontFamily="RobotoBold"
                                                   LineBreakMode="TailTruncation" />
                                        <Label FontSize="Micro">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding FormatDescription}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </StackLayout>
                                    <Grid Grid.Column="1" Margin="0,0,5,0">
                                        <ImageButton 
                                            Padding="5"
                                            AutomationId="uxDownloadMediaButton"                                                                                        
                                            Source="download_icon.png"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainWindowViewModel}}, Path=DownloadMediaCommand}"
                                            CommandParameter="{Binding}" >
                                        </ImageButton>
                                    </Grid>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
            <Label Grid.Row="3" TextColor="{StaticResource Primary}">Download queue</Label>
            <Frame Grid.Row="4" CornerRadius="2" Margin="0" Padding="5">
                <CollectionView x:Name="DownloadsListView"                
                                    ItemsSource="{Binding Downloads}"
                                    SelectionMode="None"
                                    EmptyView="Empty">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="5" Orientation="Vertical"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="10" Padding="0">
                                <Grid Padding="10" x:DataType="vm:DownloadTaskProxy">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <StackLayout>
                                        <Grid>
                                            <ProgressBar 
                                                    Progress="{Binding DownloadProgress, Mode=OneWay, Converter={StaticResource PercentIntToDoubleConverter}}"
                                                    ProgressColor="MediumPurple">
                                            </ProgressBar>
                                            <Label FontSize="Micro" HorizontalTextAlignment="Center"
                                               TextColor="Black"
                                               Text="{Binding DownloadProgress, Mode=OneWay, StringFormat='{0}%'}"/>
                                        </Grid>
                                    </StackLayout>
                                    <StackLayout Grid.Column="1" >
                                        <ImageButton 
                                            IsVisible="{Binding CanCancel}"
                                            Padding="5"
                                            AutomationId="uxCancelTaskButton"                                                                                        
                                            Source="cancel_icon.png"                                            
                                            Command="{Binding CancelTaskCommand}" />
                                        <ImageButton 
                                            IsVisible="{Binding CanRemove}"
                                            Padding="5"
                                            AutomationId="uxRemoveTaskButton"                                                                                        
                                            Source="trash_icon.png"                                            
                                            Command="{Binding RemoveTaskCommand}" />
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>
