<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:VRT.Downloaders.ViewModels;assembly=VRT.Downloaders.Core"
             x:DataType="vm:SettingsViewModel"
             x:Class="VRT.Downloaders.Maui.Pages.SettingsPage"
             Title="Settings">    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding SaveSettingsCommand}">
            <ToolbarItem.IconImageSource>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="Android, WinUI" Value="save_icon.png" />
                </OnPlatform>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>    
    <ContentPage.Content>
        <StackLayout>
            <Entry 
                Text="{Binding OutputDirectory}"
                IsReadOnly="False" 
                Placeholder="Output directory">
            </Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>