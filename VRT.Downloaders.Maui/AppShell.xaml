<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VRT.Downloaders.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="VRT Downloader"
    xmlns:local="clr-namespace:VRT.Downloaders.Maui"
    xmlns:pages="clr-namespace:VRT.Downloaders.Maui.Pages"    
    Shell.FlyoutBehavior="Disabled">
    
    <TabBar>        
        <ShellContent Title="Downloads" Icon="download_icon.png" Route="DownloadsPage" ContentTemplate="{DataTemplate pages:MainPage}" />
        <ShellContent Title="Settings" Icon="settings_icon.png" ContentTemplate="{DataTemplate pages:SettingsPage}" />        
    </TabBar>    
</Shell>
